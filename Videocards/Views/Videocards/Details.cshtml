@model Videocards.Models.Videocard

@{
    ViewData["Title"] = Model.Name;
}

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="~/Images/@Model.ImageUrl" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="..." class="d-block w-100" alt="...">
    </div>
  </div>
</div>

<div class="card mb-3">
  <div class="card-body">
      <div class="flex-row" style="display: flex; align-items: baseline">
        <p class="card-title" style="width:100px; font-size: 1.25rem" >@Model.Name</p>
        <a asp-action="Add" asp-controller="Cart" asp-route-id="@Model.Id" class="btn btn-outline-primary">Купить</a>
      </div>
    <dl class="dl-horizontal">
        <dt>
            Компания
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Company)
        </dd>
        <dt>
            Название
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Производитель
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Vendor.Name)
        </dd>
        <dt>
           Цена
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
           Обзор
        </dt>
         <dd>
            @Html.DisplayFor(model => model.OverView)
        </dd>
    </dl>
    <p class="card-text"><small class="text-muted">Последнее обновление 1 нед. назад</small></p>
  </div>
</div>
<div>
    
</div>
@if (User.IsInRole("Admin"))
{
<div>
    <a asp-action="Index" asp-controller="Home">Назад в каталог</a> |
    <a asp-action = "Delete" asp-controller = "Videocards" asp-route-id = "@Model.Id" > Удалить </a> |
    <a asp-action = "Edit" asp-route-id = "@Model.Id" > Изменить </a>
     
</div>
}
else{
    <div>
    <a asp-action="Index" asp-controller="Home">Назад в каталог</a>
     
</div>
}