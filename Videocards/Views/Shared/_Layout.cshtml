
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body style="font-family: Consolas">
    <!--меню-->
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid" style="justify-content:center">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Переключатель навигации">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01" style="justify-content:space-between">
                <a class="navbar-brand" href="/">Videomag</a>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0" style="justify-content:right;width:78%; display: flex; align-items: baseline">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a asp-action="Login" asp-controller="Account" class="nav-link active" aria-current="page">Войти</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Register" asp-controller="Account" class="nav-link">Регистрация</a>
                        </li>
                    }
                    else
                    {

                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Cart" class="nav-link active" aria-current="page">Корзина</a>
                        </li>
                        <li class="nav-item">
                            <p style="color:#007BFF">@User.Identity.Name</p>
                        </li>
                        <li class="nav-item">
                            <form asp-area="" asp-controller="Account" asp-action="Logout" class="dropdown-item">
                                <button type="submit" class="btn btn-link" style="padding: 0">Выход</button>
                            </form>
                        </li>

                    }
                </ul>
            </div>
            <form asp-action="Search" asp-controller="Home" class="d-flex" role="search">
                <input class="form-control me-2" type="search" name="searchString" placeholder="Поиск" aria-label="Поиск">
                <button class="btn btn-outline-success" type="submit">Поиск</button>
            </form>
        </div>
    </nav>
    <!--основной контент-->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>© 2022 - Videomag</p>
        </footer>
    </div>
</body>
</html>